@model Diplomado_MVC_HTML_Helps_Persona.Models.Persona
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditarPersona</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <p>
                Código
                @Html.EditorFor(Model => Model.Codigo)
            </p>
            <p>
                Nombre:
                @Html.EditorFor(Model => Model.Nombre)
            </p>
            <p>
                Peso:
                @Html.EditorFor(Model => Model.Peso)
            </p>
            <p>
                Trabaja?:
                @Html.EditorFor(Model => Model.Trabaja)
            </p>
            <p>
                Fecha de Nacimiento:
                @Html.EditorFor(Model => Model.FechaNacimiento)
            </p>
            <p>
                <input type="submit" value="Confirmar" />
            </p>
        }
        @Html.ActionLink("Retornar Sin Registrar","Index")
    </div>
</body>
</html>
